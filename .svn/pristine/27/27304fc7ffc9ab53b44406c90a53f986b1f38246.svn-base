<div class="question"><label>{{index+1}}.{{question.questionText}}</label>
    <div *ngIf="question.questionType==='Multiple Choice'" class="option">
        <div   *ngFor="let option of question.options" class="display">
          <div >
        <mat-radio-button class="example-margin" >
        </mat-radio-button>
          </div>
       <label class="space radio">{{option.optionName}}</label>
    </div>
    </div>
    <div class="option" *ngIf="question.questionType==='CheckBox'">
        <div *ngFor="let option of question.options;let i=index" class="display">
            <div>
        <mat-checkbox class="example-margin" [checked]="selected === i" (change)="selected = i">
        </mat-checkbox>
            </div>
       <label class="space">{{option.optionName}}</label>
    </div>
    </div>
    </div>
    <div class="question" *ngIf="question.questionType==='Dropdown'">
    <mat-form-field appearance="fill" class="select-option">
        <mat-label>Select</mat-label>
        <mat-select>
          <mat-option
            *ngFor="let option of question.options"
            [value]="option.optionName"
            >{{ option.optionName}}</mat-option
          >
        </mat-select>
      </mat-form-field>
    </div>
